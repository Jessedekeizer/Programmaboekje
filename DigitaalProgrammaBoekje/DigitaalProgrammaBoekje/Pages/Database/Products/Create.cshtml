@page
@model DigitaalProgrammaBoekje.Pages.Database.Products.Create

@{
    Layout = null;
}

<h1>Create New Product</h1>
<form method="POST">
    <div>
        <label asp-for="Product.Name">Name:</label>
        <input asp-for="Product.Name"/>
        <span asp-validation-for="Product.Name"></span>
    </div>
    <div>
        <button type="submit">Create</button>
        <button asp-page-handler="Cancel">Cancel</button>
    </div>
</form>