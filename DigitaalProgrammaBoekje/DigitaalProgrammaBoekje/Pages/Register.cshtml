@page
@model DigitaalProgrammaBoekje.Pages.Register

@{
    ViewData["Title"] = "Register";
}
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row m-3">
            <div class="col-3">
                <label asp-for="RegisterCredential.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="RegisterCredential.Username" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterCredential.Username"></span>
        </div>
        <div class="form-group row m-3">
            <div class="col-3">
                <label asp-for="RegisterCredential.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="RegisterCredential.Email" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterCredential.Email"></span>
        </div>

        <div class="form-group row m-3">
            <div class="col-3">
                <label asp-for="RegisterCredential.Telefoonnummer"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="RegisterCredential.Telefoonnummer" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterCredential.Telefoonnummer"></span>
        </div>

        <div class="form-group row m-3">
            <div class="col-3">
                <label asp-for="RegisterCredential.Dirigent"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="RegisterCredential.Dirigent" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterCredential.Dirigent"></span>
        </div>

        <div class="form-group row m-3">
            <div class="col-3">
                <label asp-for="RegisterCredential.Divisie"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="RegisterCredential.Divisie" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterCredential.Divisie"></span>
        </div>

        <div class="form-group row m-3">
            <div class="col-3">
                <label asp-for="RegisterCredential.Wachtwoord"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="RegisterCredential.Wachtwoord" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterCredential.Wachtwoord"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 m-4">
                <input href="/Login" type="submit" class="btn btn-primary" value="Register"/>
            </div>
            <span class="text-danger"> @Model.Warning </span>
        </div>
    </form>
</div>