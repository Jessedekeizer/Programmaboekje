@page
@using Org.BouncyCastle.Asn1.X509
@using DigitaalProgrammaBoekje.Pages.Database.Models
@using System.Net.Mime
@model DigitaalProgrammaBoekje.Pages.EditScreen

@{
    ViewData["Title"] = "Edit Page";
}
<div class="d-flex flex-row">
    <div class="col-2">
        cijfers
    </div>
    <div class="col-2" style="width: 320px; overflow: auto">
        <table class="table">
            @foreach (var blok in Model.Bloks)
            {
                <tbody>
                <tr>
                    <td>
                        <div class="d-flex; flex-column">
                            @if (blok != Model.Bloks.First())
                            {
                                <form method="post" asp-page-handler="Up">
                                    <input type="hidden" value="@blok.Blok_id" name="blok_id"/>
                                    <input type="hidden" value="@blok.Bloknummer" name="bloknummer"/>
                                    <input type="hidden" value="@blok.Festival_id" name="festival_id"/>
                                    <button type="submit">
                                        <i class="fa fa-arrow-up"></i>
                                    </button>

                                </form>
                            }
                            @if (blok != Model.Bloks.Last())
                            {
                                <form method="post" asp-page-handler="Down">
                                    <input type="hidden" value="@blok.Blok_id" name="blok_id"/>
                                    <input type="hidden" value="@blok.Bloknummer" name="bloknummer"/>
                                    <input type="hidden" value="@blok.Festival_id" name="festival_id"/>
                                    <button type="submit">
                                        <i class="fa fa-arrow-down"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </td>
                    @if (blok.Blok_type != 't')
                    {
                        <td>@(blok.Begintijd.ToString(@"hh\:mm"))</td>
                        @if (blok.Blok_type == 'o')
                        {
                            <td style="white-space: pre-wrap;">
                                @blok.Orkestgroep.Orkestnaam
                                <br/>
                                @blok.Orkestgroep.Muziekstukken
                            </td>
                            <td>
                                Cijfer:<br/>
                                @blok.Orkestgroep.Cijfer
                            </td>
                        }
                    }
                    else
                    {
                        <td colspan="3" style="white-space: pre-wrap;">@blok.Tekstvak</td>
                    }
                    <td>
                        <div class="d-flex; flex-column">
                            <form method="post" asp-page-handler="Update">
                                <input type="hidden" value="@blok.Blok_id" name="blok_id"/>
                                <button type="submit">
                                    <i class="fa fa-arrow-up"></i>
                                </button>
                            </form>
                            <form method="post" asp-page-handler="Delete">
                                <input type="hidden" value="@blok.Blok_id" name="blok_id"/>
                                <button type="submit">
                                    <i class="fa fa-arrow-down"></i>
                                </button>
                            </form>
                            
                        </div>
                    </td>
                </tr>
                </tbody>
            }
        </table>
        <form method="post" asp-page-handler="Selection">
            <button>
                <i class="fa fa-plus-circle"></i>
            </button>
        </form>
    </div>
    <div class="row col-8">
      <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
          <a class="list-group-item list-group-item-action active" id="list-Text-list" data-bs-toggle="list" href="#list-Text" role="tab" aria-controls="list-Text">Tekstvak</a>
          <a class="list-group-item list-group-item-action" id="list-profile-list" data-bs-toggle="list" href="#list-profile" role="tab" aria-controls="list-profile">Profile</a>
          <a class="list-group-item list-group-item-action" id="list-messages-list" data-bs-toggle="list" href="#list-messages" role="tab" aria-controls="list-messages">Messages</a>
          <a class="list-group-item list-group-item-action" id="list-settings-list" data-bs-toggle="list" href="#list-settings" role="tab" aria-controls="list-settings">Settings</a>
        </div>
      </div>
      <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-Text" role="tabpanel" aria-labelledby="list-Text-list">
                <form method="post" name="TextNotes" id="TextNotes">
                    <div class="row">
                        <textarea name="Text1" id="Text1" cols="60" rows="10" form="TextNotes">@Model.Text</textarea>
                    </div>
                    <div class="row">
                        <button asp-page-handler="save">opslaan</button>
                        <button asp-page-handler="remove">verwijder</button>
                    </div>
                </form>
            </div>
          <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">...</div>
          <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">...</div>
          <div class="tab-pane fade" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list">...</div>
        </div>
      </div>
    </div>
<!--

-->
</div>